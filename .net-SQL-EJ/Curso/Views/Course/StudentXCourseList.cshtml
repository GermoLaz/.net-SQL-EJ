@model IEnumerable <Curso.Models.StudentXCourse>
@{
    ViewBag.Title = "Listado de alumnos por curso";
}

<h2>Listado de alumnos por curso</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dataTables-example dataTable no-footer" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                    <thead>
                        <tr role="row">
                            <th>
                                Nombre
                            </th>
                            <th>
                                Apellido
                            </th>
                            <th>
                                Curso
                            </th>
                            <th>
                                Año
                            </th>
                            <th>
                                Semestre
                            </th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.lastname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.year)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.semester)
                                </td>
                            </tr>
                        }
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Mensaje != "" && ViewBag.Mensaje != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Mensaje");
        };
    </script>
}
