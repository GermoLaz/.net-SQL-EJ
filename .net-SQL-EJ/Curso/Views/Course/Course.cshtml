@model Cursos.Models.Coursee
@{
    ViewBag.Title = "Cargar Curso";
}

<h2>Cargar Profesor</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                @using (Html.BeginForm("Course", "Course", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.name)
                            </div>
                            <div class="col-md-5">
                                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.name, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>                   
                    <div class="ibox-title" style="text-align: center;">
                        <button type="submit" class="btn btn-primary" style=" height: 50px; width: 138px; font-size: 17px; ">
                            Enviar <i class="fa fa-cart-plus" style="padding-left: 10px;"></i>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@if (ViewBag.Mensaje != "" && ViewBag.Mensaje != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Mensaje");
        };
    </script>
}
