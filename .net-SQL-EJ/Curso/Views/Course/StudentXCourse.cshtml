@model      IEnumerable < Cursos.Models.Course
@{
    ViewBag.Title = "Asignar alumno al curso";
}

<h2>Cargar Profesor</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                @using (Html.BeginForm("StudentXCourse", "Course", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.course)
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownList("course", null, " ", new { @class = "form-control", @style = "width: 100%; height: 30px;" })
                                @Html.ValidationMessageFor(model => model.course, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.student)
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownList("student", null, " ", new { @class = "form-control", @style = "width: 100%; height: 30px;" })
                                @Html.ValidationMessageFor(model => model.student, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.year)
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownList("year", null, " ", new { @class = "form-control", @style = "width: 100%; height: 30px;" })
                                @Html.ValidationMessageFor(model => model.year, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.LabelFor(model => model.semester)
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownList("semester", null, " ", new { @class = "form-control", @style = "width: 100%; height: 30px;" })
                                @Html.ValidationMessageFor(model => model.semester, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class
                    <div class="ibox-title" style="text-align: center;">
                        <button type="submit" class="btn btn-primary" style=" height: 50px; width: 138px; font-size: 17px; ">
                            Enviar <i class="fa fa-cart-plus" style="padding-left: 10px;"></i>
                        </button>
                    </div>
                }
            </div>
                </div>
    </div>
</div>
@if (ViewBag.Mensaje != "" && ViewBag.Mensaje != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Mensaje");
        };
    </script>
}
